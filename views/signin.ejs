<div class="form-label-group">
    <div class="form-label-group">
        <input type="text" id="username" class="form-control" name="username" placeholder="Username"
            value="<%= typeof username != 'undefined' ? username : '' %>" required autofocus>
        <label for="username">Username</label>
    </div>
</div>

<div class="form-label-group">
    <div class="form-label-group">
        <input type="password" id="password" class="form-control" name="password" placeholder="Password"
            value="<%= typeof email != 'undefined' ? password : '' %>" required autofocus
            autocomplete="current-password">
        <label for="password">Password</label>
    </div>
</div>

<button id="submit" class="btn btn-lg btn-primary btn-block" type="submit">Sign
    in</button>
<p class="lead mt-4"> Need an account? <a href="/user/signup">Sign up</a></p>